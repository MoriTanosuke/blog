---
layout: nil
---
<?xml version="1.0" encoding="UTF-8" ?>
<feed xmlns="http://www.w3.org/2005/Atom">
 
 <title>{{ site.owner-title }}</title>
 <link href="{{ site.base-url }}/atom.xml" rel="self" />
 <link href="{{ site.base-url }}" />
 <updated>{{ site.time | date_to_xmlschema }}</updated>
 <id>{{ site.base-url }}/</id>
 <author>
   <name>{{ site.owner-name }}</name>
   <email>{{ site.owner-email }}</email>
 </author>

 {% for post in site.posts %}
 <entry>
   <title>{{ post.title }}</title>
   <link href="{{ site.base-url }}{{ post.url }}" />
   <updated>{{ post.date | date_to_xmlschema }}</updated>
   <id>{{ site.base-url }}{{ post.url }}</id>
   <content type="html">{{ post.content | strip_html | truncatewords: 50 | xml_escape }}</content>
 </entry>
 {% endfor %}
 
</feed>
